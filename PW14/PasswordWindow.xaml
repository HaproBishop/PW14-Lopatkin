<Window x:Class="PW13.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PW13"
        mc:Ignorable="d"
        Title="Авторизация" Height="120" Width="290" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="SingleBorderWindow" Closed="Window_Closed" Closing="Window_Closing">
    <DockPanel LastChildFill="True">
        <PasswordBox x:Name="PasswordLine" Loaded="PasswordLine_Loaded" DockPanel.Dock="Top" FontSize="12" MinHeight="20"/>
        <Button x:Name="Enter" Content="Войти" Click="Enter_Click" IsDefault="True" DockPanel.Dock="Top" FontSize="12" MinHeight="20"/>
        <Button x:Name="Cancel" Content="Отмена" IsCancel="True"  DockPanel.Dock="Top" FontSize="12" MinHeight="20"/>
        </DockPanel>
</Window>

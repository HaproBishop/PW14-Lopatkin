<Window x:Class="PW13.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PW13"
        mc:Ignorable="d"
        Title="Авторизация" Height="100" Width="200" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="SingleBorderWindow" Closed="Window_Closed" Closing="Window_Closing">
    <StackPanel>
        <PasswordBox x:Name="PasswordLine" Loaded="PasswordLine_Loaded"/>
        <Button x:Name="Enter" Content="Войти" Click="Enter_Click" IsDefault="True"/>
        <Button x:Name="Cancel" Content="Отмена" IsCancel="True"/>
    </StackPanel>
</Window>
